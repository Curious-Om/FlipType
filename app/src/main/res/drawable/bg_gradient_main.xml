<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0D0D14" />
        </shape>
    </item>
    <!-- Subtle purple glow from top center -->
    <item android:top="-120dp" android:left="40dp" android:right="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="280dp"
                android:startColor="#336C63FF"
                android:endColor="#00000000" />
        </shape>
    </item>
    <!-- Subtle gold glow at bottom -->
    <item android:bottom="-200dp" android:left="60dp" android:right="60dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="220dp"
                android:startColor="#15FFC107"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
