<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <!-- Top Bar: Coin balance -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_coin_pill"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83E\uDE99"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCoinBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/combo_gold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Title with glow effect -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <View
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/title_glow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uD83D\uDD04"
                        android:textSize="36sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REVERSE"
                        android:textColor="@color/primary"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="0.12"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUSH"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="0.12"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginTop="-10dp" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:background="@color/primary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡ Type it backwards! ⚡"
                        android:textColor="@color/text_secondary"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.05" />
                </LinearLayout>
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- High Score Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_highscore_card"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83C\uDFC6"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvHighScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIGH SCORE: 0"
                    android:textColor="@color/combo_gold"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <!-- Settings Section Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section_card"
                android:padding="16dp">

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83D\uDCDA  CATEGORY"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/rounded_input"
                    android:popupBackground="@color/card_bg"
                    android:layout_marginBottom="14dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#10FFFFFF"
                    android:layout_marginBottom="14dp" />

                <!-- Difficulty -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83C\uDFAF  DIFFICULTY"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedButton="@id/btnMedium">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEasy"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="EASY"
                        android:textSize="13sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMedium"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="MEDIUM"
                        android:textSize="13sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHard"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="HARD"
                        android:textSize="13sp" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Play Button -->
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="\u25b6  PLAY"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_play_button"
                android:stateListAnimator="@null"
                android:elevation="8dp" />

            <!-- Daily Challenge Button -->
            <Button
                android:id="@+id/btnDaily"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="\uD83D\uDD25  DAILY CHALLENGE"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/combo_gold"
                android:background="@drawable/bg_daily_button"
                android:stateListAnimator="@null"
                android:layout_marginTop="12dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Feature Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnShop"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="\uD83D\uDED2 SHOP"
                    android:textSize="13sp"
                    android:layout_marginEnd="6dp"
                    app:cornerRadius="23dp" />

                <Button
                    android:id="@+id/btnAchievements"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="\uD83C\uDFC6 TROPHIES"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp"
                    app:cornerRadius="23dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>